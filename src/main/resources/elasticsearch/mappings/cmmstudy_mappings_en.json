{
  "cmmstudy_en": {
    "mappings": {
      "cmmstudy": {
        "_all": {
          "enabled": true,
          "analyzer": "pasc_indexing_standard_autocomplete",
          "search_analyzer": "pasc_searching_standard"
        },
        "dynamic_templates": [
          {
            "template_id": {
              "match": "*.id",
              "match_mapping_type": "string",
              "mapping": {
                "type": "string",
                "index": "not_analyzed",
                "ignore_above": 256
              }
            }
          },
          {
            "template_vocab": {
              "match": "*.vocab",
              "match_mapping_type": "string",
              "mapping": {
                "type": "string",
                "index": "not_analyzed",
                "ignore_above": 256
              }
            }
          },
          {
            "template_vocabUri": {
              "match": "*.vocabUri",
              "match_mapping_type": "string",
              "mapping": {
                "type": "string",
                "index": "not_analyzed",
                "ignore_above": 256
              }
            }
          },
          {
            "template_term": {
              "match": "*.term",
              "match_mapping_type": "string",
              "mapping": {
                "type": "string",
                "term_vector": "yes"
              }
            }
          }
        ],
        "properties": {
          "titleStudy": {
            "type": "string",
            "term_vector": "with_positions_offsets",
            "boost": 3.5
          },
          "abstract": {
            "type": "string",
            "term_vector": "with_positions_offsets",
            "boost": 2
          },
          "creators": {
            "type": "string",
            "term_vector": "with_positions_offsets",
            "boost": 2

          },
          "dataAccessFreeTexts": {
            "type": "string",
            "term_vector": "with_positions_offsets"
          },
          "dataCollectionFreeTexts": {
            "type": "nested",
            "properties": {
              "dataCollectionFreeText": {
                "type": "string",
                "term_vector": "with_positions_offsets"
              },
              "event": {
                "type": "string"
              }
            }
          },
          "dataCollectionPeriodEnddate": {
            "type": "date",
            "format": "strict_date_optional_time||epoch_millis||year",
            "ignore_malformed": true
          },
          "dataCollectionPeriodStartdate": {
            "type": "date",
            "format": "strict_date_optional_time||epoch_millis||year",
            "ignore_malformed": true
          },
          "fileLanguages": {
            "type": "string",
            "index": "not_analyzed",
            "ignore_above": 256
          },
          "id": {
            "type": "string",
            "index": "not_analyzed",
            "ignore_above": 256
          },
          "isActive": {
            "type": "boolean"
          },
          "lastModified": {
            "type": "date",
            "format": "strict_date_optional_time||epoch_millis"
          },
          "pidStudies": {
            "type": "nested",
            "properties": {
              "agency": {
                "type": "string",
                "index": "not_analyzed",
                "ignore_above": 256
              },
              "pid": {
                "type": "string",
                "index": "not_analyzed",
                "ignore_above": 256
              }
            }
          },
          "publicationYear": {
            "type": "date",
            "format": "strict_date_optional_time||epoch_millis||year"
          },
          "publisher": {
            "type": "nested",
            "properties": {
              "abbr": {
                "type": "string",
                "index": "not_analyzed",
                "ignore_above": 256
              },
              "publisher": {
                "type": "string"
              }
            }
          },
          "samplingProcedureFreeTexts": {
