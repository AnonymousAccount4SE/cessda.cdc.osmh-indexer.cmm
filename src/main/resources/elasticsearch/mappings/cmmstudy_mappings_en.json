                "ignore_above": 256
              },
              "country": {
                "type": "string",
                "index": "not_analyzed",
                "ignore_above": 256
              }
            }
          },
          "studyNumber": {
            "type": "string",
            "index": "not_analyzed",
            "ignore_above": 256
          },
          "studyUrl": {
            "type": "string",
            "index": "not_analyzed",
            "ignore_above": 512
          },
          "keywords": {
            "type": "nested",
            "properties": {
              "id": {
                "type": "string"
              },
              "term": {
                "type": "string"
              },
