{
  "number_of_shards": "%s",
  "number_of_replicas": "%s",
  "analysis": {
    "analyzer": {
      "pasc_standard_analyzer": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": [
          "standard",
          "lowercase",
          "asciifolding",
          "finnish_stop"
        ]
      },
      "pasc_index_autocomplete_analyzer": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": [
          "standard",
          "lowercase",
          "asciifolding",
          "finnish_stop",
          "autocomplete_filter"
        ]
      }
    },
    "filter": {
      "autocomplete_filter": {
        "type": "edge_ngram",
        "min_gram": 1,
        "max_gram": 20
      },
      "finnish_stop": {
        "type": "stop",
        "stopwords": "_finnish_"
      }
    }
  }
}
